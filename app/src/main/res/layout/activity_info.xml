<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info"
    android:background="@drawable/gradient_animation"
    android:id="@+id/info_main_screen"
    >


    <TextView
        android:id="@+id/cc_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COLOR CLICK"
        android:textColor="@color/semiTransparentLayer"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        />

    <RelativeLayout
        android:id="@+id/info_screen"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/transparent_layer"
        android:layout_below="@id/cc_text"
        >

    <ImageView
        android:id="@+id/asdev_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="15dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/asdev_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AmanSoft Developers"
        android:textColor="#fff"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/asdev_logo"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        />

        <TextView
            android:id="@+id/dev_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/asdev_title"
            android:textColor="#fff"
            android:text="Developer : Aman Nirala"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dev_name_text"
            android:textColor="#fff"
            android:text="Email: asdevofficial@gmail.com"
            android:textIsSelectable="true"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            />

        <Button
            android:id="@+id/github_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="GitHub"
            android:textColor="#000"
            android:layout_below="@id/email_text"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:background="#fff"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/instagram_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Instagram"
            android:textColor="#000"
            android:layout_below="@id/github_button"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:background="#fff"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:background="@color/transparent"
            android:text="Back"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/icon_sc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Icons from: https://www.flaticon.com "
            android:textAlignment="center"
            android:layout_below="@id/instagram_button"
            android:layout_margin="10dp"
            android:textSize="15sp"
            />

    </RelativeLayout>




</RelativeLayout>