<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/main_activity_screen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_animation"
    tools:context=".MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_margin="30dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#fff"

            />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/player_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerInParent="true"
            android:layout_below="@+id/title_text"
            android:layout_marginBottom="15dp"
            android:paddingHorizontal="50dp"
            android:paddingTop="50dp"
            app:civ_border="true"
            app:civ_border_color="#fff"
            app:civ_border_width="2dp"
            app:civ_background_color="#fff"
            android:layout_marginTop="60dp"
            android:visibility="gone"
            />


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_container"
    android:layout_centerInParent="true"
    android:layout_alignParentBottom="true"
    android:background="@drawable/round_white"
    android:paddingTop="10dp"
    android:layout_marginHorizontal="30dp"
    android:layout_below="@id/player_image"
    android:visibility="gone"
    >

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_marginHorizontal="15dp"
        android:text="Welcome"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginHorizontal="15dp"
        android:text="..."
        android:layout_below="@id/welcome_text"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/your_highest_score_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:text="ðŸ† Your Highest Score :"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@id/your_highest_score"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/your_highest_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:layout_above="@id/world_highest_score_text"
        android:textStyle="bold"
        android:text="..."
        android:textSize="40sp"
        android:textColor="#000"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        />

    <TextView
        android:id="@+id/world_highest_score_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:text="ðŸ¥‡ World's Highest Score :"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="15dp"
        android:layout_above="@id/world_highest_score_name"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/world_highest_score_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:text="..."
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="15dp"
        android:layout_above="@id/world_highest_score"
        />

    <TextView
        android:id="@+id/world_highest_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@id/play_button"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="..."
        android:textSize="40sp"
        android:textColor="#000"
        android:layout_marginBottom="15dp"
        />


    <Button
        android:id="@+id/play_button"
        android:layout_above="@+id/play_text"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circular_button"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:paddingRight="9dp"
        android:drawableRight="@drawable/ic_action_name"
        android:drawablePadding="10dp"
        />

    <TextView
        android:id="@+id/play_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:text="PLAY"
        android:textSize="15dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        />


</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loading_container"
        android:background="#d9000000"
        >

        <ProgressBar
            android:id="@+id/loading_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_below="@id/loading_progress"
            android:text="Please wait..."
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            />


    </RelativeLayout>

</RelativeLayout>