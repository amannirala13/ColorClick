<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".WorldHighScore"
   android:id="@+id/world_highscore_screen"
    >

    <TextView
        android:id="@+id/world_new_record_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="World Record"
        android:textSize="40sp"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"

        />

    <ImageView
        android:id="@+id/world_score_icon"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/podium"
        android:layout_centerInParent="true"
        android:layout_below="@id/world_new_record_text"
        android:layout_margin="15dp"
        />

    <TextView
        android:id="@+id/world_congo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/world_score_icon"
        android:text="Congratulations! You made a new\nWorld Record"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_margin="15sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/world_congo_score_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:text="0"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_below="@id/world_congo_text"
        android:textColor="@color/colorAccent"
        />
    <Button
        android:id="@+id/world_congo_continue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="Continue"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="30dp"
        android:textSize="15sp"
        android:background="@drawable/white_button"
        />

</RelativeLayout>